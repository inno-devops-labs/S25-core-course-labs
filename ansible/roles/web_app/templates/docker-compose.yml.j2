version: '3'
services:
  moscow-time-app:
    image: "{{ docker_image }}"
    restart: always
    ports:
      - "{{ app_port }}:5000"
    environment:
      - TZ=Europe/Moscow
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:5000"]
      interval: 30s
      timeout: 10s
      retries: 3
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"
